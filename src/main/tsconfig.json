{
  "compilerOptions": {
    "target": "es5",
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "../../dist",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    // "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": []
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "includes": ["./*.(js|ts)"]
}
